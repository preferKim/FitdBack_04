<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fitdback.posedetection">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MaterialTheme">
        <activity
            android:name="com.fitdback.userinterface.TestLoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"> <!-- 앱 중단 에러 방지 -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.fitdback.userinterface.LoginSuccessActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"> <!-- 앱 중단 에러 방지 -->

        </activity>

        <activity
            android:name=".CameraActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>

    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/fb_exTypeArea"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Exercise name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fb_exResultArea"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="ex result area"
            android:textSize="30sp" />

    </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >



        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/complete_PrgBar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:layout_marginHorizontal="20dp"
            app:progress_background_color="@color/btn_gray"
            app:progress_end_color="@color/btn_primary"
            app:progress_start_color="@color/btn_primary_red"
            app:progress_stroke_cap="round"
            app:progress_stroke_width="10dp"
            app:progress_text_color="@color/btn_gray"
            app:progress_text_size="30sp"
            app:style="solid_line" />
        <TextView
            android:id="@+id/fb_achivementRate"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="0.3"
            android:text="달성률 표기"
            android:textSize="30sp" />
    </LinearLayout>
    </ScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fb_feedbackArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="feedback area"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/feedbackYAxisTitleArea"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/feedbackBarChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/fb_btnShowExCalorieChart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:text="칼로리 소모량"
                android:textSize="15sp" />

            <Button
                android:id="@+id/fb_btnShowExCountChart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:text="운동 횟수"
                android:textSize="15sp" />

            <Button
                android:id="@+id/fb_btnShowExTimeChart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:text="운동 시간"
                android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
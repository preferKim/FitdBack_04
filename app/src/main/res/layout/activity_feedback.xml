<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_selector_color"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginVertical="10dp">
        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/complete_PrgBar"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:progress_background_color="@color/btn_gray"
            app:progress_end_color="@color/btn_primary"
            app:progress_start_color="@color/btn_primary_red"
            app:progress_stroke_cap="round"
            app:progress_stroke_width="20dp"
            app:progress_text_color="@color/btn_gray"
            app:progress_text_size="30sp"
            app:style="solid_line" />
        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/fb_achivementRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="달성률 표기"
                android:textSize="20sp" />
        </GridLayout>
    </LinearLayout>

    </ScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:orientation="vertical"
            android:background="@color/primary_bg"
            >
            <GridLayout
                android:id="@+id/grid_sq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/btn_selector_color"
                >
                <TextView
                    android:id="@+id/fb_sq_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    tools:text="squat"
                    android:textSize="20sp"
                    android:fontFamily="@font/font"
                    />
                <TextView
                    android:id="@+id/fb_msg_sq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    tools:text="hi"
                    android:textSize="20dp"/>
            </GridLayout>

            <GridLayout
                android:id="@+id/grid_pl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/btn_selector_color"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:id="@+id/fb_pl_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="plank"
                    android:textSize="20sp"
                    android:fontFamily="@font/font"
                    />
                <TextView
                    android:id="@+id/fb_msg_pl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="hi"
                    android:textSize="20dp"/>
            </GridLayout>

            <GridLayout
                android:id="@+id/grid_slr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/btn_selector_color">
            <TextView
                android:id="@+id/fb_slr_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="sidelr"
                android:textSize="20sp"
                android:fontFamily="@font/font"
                />
            <TextView
                android:id="@+id/fb_msg_slr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="hi"
                android:textSize="20dp"/>
            </GridLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector_color"
                android:layout_marginHorizontal="10dp"
                android:paddingBottom="10dp"
                >

            <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/feedbackBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    />
                <TextView
                    android:id="@+id/feedbackYAxisTitleArea"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    tools:text="개수"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
            <Button
                android:id="@+id/fb_btnShowExCalorieChart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:text="칼로리 소모량"
                android:fontFamily="@font/font"
                android:background="@drawable/btn_stroke_blk"
                android:textSize="15sp" />

            <Button
                android:id="@+id/fb_btnShowExCountChart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:text="운동 횟수"
                android:fontFamily="@font/font"
                android:background="@drawable/btn_stroke_blk"
                android:layout_marginHorizontal="5dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/fb_btnShowExTimeChart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:text="운동 시간"
                android:fontFamily="@font/font"
                android:background="@drawable/btn_stroke_blk"
                android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
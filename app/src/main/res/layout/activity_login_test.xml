<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fitdback.userinterface.LoginActivity_new"
    android:background="#f7f7f7"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:src="@drawable/pinterest_profile_image_1"
        android:layout_gravity="top"
        />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/image_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnRunEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:background="@drawable/btn_stroke_blk"
                android:fontFamily="@font/font"
                android:textColor="@color/btn_gray"
                android:text="이메일 로그인" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <View
                android:background="@color/btn_gray"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F7F7F7"
                android:paddingHorizontal="10dp"
                android:text="or"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <com.google.android.gms.common.SignInButton
                    android:id="@+id/btnRunGoogleLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_stroke_blk"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구글 계정으로 로그인"
                    android:textSize="20dp"
                    android:fontFamily="@font/font"
                    android:layout_centerInParent="true"
                    android:background="@color/white"/>

            </RelativeLayout>


            <Button
                android:id="@+id/btnRunDevLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:background="@drawable/btn_stroke_blk"
                android:fontFamily="@font/font"
                android:textColor="@color/btn_gray"
                android:text="개발자 로그인" />

            <TextView
                android:id="@+id/joinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="계정이 없으신가요?(클릭)"
                android:textColor="@color/btn_primary"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="@font/font"
                android:background="@drawable/underline"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/primary_bg"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="게시글 작성"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="@font/font"
        />
    <EditText
        android:id="@+id/memoArea"
        android:hint="메모를 입력해주세요."
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:layout_height="100dp"
        android:background="@drawable/edit_text_blk"
        android:paddingHorizontal="5dp"
        android:textCursorDrawable="@drawable/text_cursor"
        />

    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:text="날짜 선택"
        android:textColor="@color/btn_gray"
        android:fontFamily="@font/font"
        android:background="@drawable/btn_selector_color"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnSelectExData"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:text="운동 데이터 선택"
        android:textColor="@color/btn_gray"
        android:fontFamily="@font/font"
        android:background="@drawable/btn_selector_color"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnPost"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:text="게시"
        android:textColor="@color/btn_gray"
        android:fontFamily="@font/font"
        android:textStyle="bold"
        android:background="@drawable/btn_selector_color"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:textSize="20sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btnSelectFirstDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="choose date"
            android:textAllCaps="false" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="0.9">

        <Button
            android:id="@+id/btnSetExTypeToSquat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:text="스쿼트 선택"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnSetExTypeToPlank"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:text="플랭크 선택"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnSetExTypeToSideLateralRaise"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:text="사이드 래터럴"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDBDummyDataWrite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="일주일 전부터 위 날짜까지 OO 데이터 생성"
        android:textAllCaps="false" />

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.fitdback.userinterface.fragment.MyPageFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TODO: Update blank fragment layout -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="20"
                android:columnCount="2"
                android:verticalSpacing="100dp">

                <!--프로필 사진-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImg"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_column="0"
                    android:layout_marginTop="30sp"
                    android:layout_marginLeft="30sp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/profile_default"
                    app:civ_border_color="#808080"
                    app:civ_border_overlay="true"
                    app:civ_border_width="5dp"
                    tools:ignore="MissingClass" />

                <TextView
                    android:text="이름"
                    android:textSize="50sp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"/>
                <TextView
                    android:text="사용자이름"
                    android:textSize="30dp"
                    android:layout_gravity="bottom"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginLeft="10sp"
                    />

                <!-- 내 정보 -->
                <TextView
                    android:text="닉네임"
                    android:textSize="40sp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="10sp"
                    />
                <TextView
                    android:text="nickname"
                    android:textSize="30sp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginTop="10sp"

                <Button
                    android:id="@+id/loginInfoBtn"
                    android:layout_width="150dp"
                    android:layout_height="50sp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_radius_color"
                    android:text="내 정보"
                    android:textColor="@color/white"
                    android:textSize="30sp" />







                <!-- 개발자 -->
                <TextView
                    android:text="개발자"
                    android:textSize="30sp"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_marginTop="20sp"
                    />
                <Button
                    android:id="@+id/devBtn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_radius_color"
                    android:text="개발자"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
            </GridLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>

